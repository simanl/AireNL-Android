<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center">
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="110dp"
        android:background="#fff"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="5sp"
            android:id="@+id/locationText"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_horizontal"
            android:text="DOWNTON OBISPADO STATION"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/descriptionLabel"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:textColor="#AAA"
            android:fontFamily="sans_serif_light"
            android:gravity="center_horizontal"
            android:text="AIR QUALITY"/>
        <FrameLayout
            android:id="@+id/airStatusView"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content"
            android:background="#0F0"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/airQualityLabel"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#FFF"
                android:text="BUENA"
                />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>